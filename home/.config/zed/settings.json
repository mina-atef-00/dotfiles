{
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"vim_mode": true,
	"completions": {},
	"agent_servers": {
		"Qwen Code": {
			"type": "custom",
			"command": "qwen",
			"args": ["--experimental-acp"]
		},
		"Gemini Code": {
			"type": "custom",
			"command": "gemini",
			"args": ["--experimental-acp"]
		}
	},
	"agent": {
		"always_allow_tool_actions": true,
		"default_profile": "ask",
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-5-mini"
		},
		"model_parameters": []
	},
	"context_servers": {
		"mcp-server-context7": {
			"enabled": true,
			"settings": {
				"context7_api_key": "{env:CONTEXT7_API_KEY}"
			}
		},
		"mcp-server-github": {
			"enabled": true,
			"settings": {
				"github_personal_access_token": "{env:GITHUB_TOKEN}",
				"api_url": "https://github.mcp.dev/"
			}
		}
	},
	"icon_theme": {
		"mode": "system",
		"light": "Catppuccin Mocha",
		"dark": "Catppuccin Mocha"
	},
	"calls": {
		"mute_on_join": true
	},
	"window_decorations": "server",
	"preview_tabs": {
		"enable_keep_preview_on_code_navigation": true,
		"enable_preview_from_file_finder": true
	},
	"tabs": {
		"show_diagnostics": "errors",
		"file_icons": true,
		"git_status": true
	},
	"title_bar": {
		"show_branch_icon": true
	},
	"use_smartcase_search": true,
	"diagnostics": {
		"inline": {
			"enabled": true
		}
	},
	"lsp": {
		"nix": {
			"settings": {
				"formatter": "nixfmt"
			}
		}
	},
	"languages": {
		"Nix": {
			"formatter": "language_server",
			"language_servers": ["nixd", "nixfmt"]
		}
	},
	"prettier": {
		"allowed": true
	},
	"colorize_brackets": true,
	"inlay_hints": {
		"enabled": true
	},
	"completion_menu_scrollbar": "auto",
	"always_treat_brackets_as_autoclosed": true,
	"indent_guides": {
		"coloring": "indent_aware",
		"background_coloring": "indent_aware"
	},
	"show_wrap_guides": false,
	"soft_wrap": "editor_width",
	"toolbar": {
		"code_actions": true
	},
	"minimap": {
		"display_in": "all_editors",
		"thumb": "hover",
		"show": "auto"
	},
	"scrollbar": {
		"diagnostics": "warning"
	},
	"relative_line_numbers": "enabled",
	"auto_signature_help": true,
	"sticky_scroll": {
		"enabled": true
	},
	"autoscroll_on_clicks": true,
	"scroll_beyond_last_line": "vertical_scroll_margin",
	"autosave": {
		"after_delay": {
			"milliseconds": 1000
		}
	},
	"ui_font_family": "Fira Sans",
	"buffer_font_family": "FiraCode Nerd Font Propo",
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"ui_font_size": 17.0,
	"buffer_font_size": 17.0,
	"theme": {
		"mode": "system",
		"light": "Catppuccin Latte",
		"dark": "Catppuccin Mocha"
	}
}
