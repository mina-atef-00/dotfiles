{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-alibaba-qwen3-auth",
    "opencode-gemini-auth@latest"
  ],
  "permission": {
    "edit": "ask",
    "write": "ask"
  },
  "provider": {
    "google": {
      "models": {
        "gemini-3-pro-preview": {
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "high",
              "includeThoughts": true
            }
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "mgrep": {
      "type": "local",
      "command": [
        "mgrep",
        "mcp"
      ],
      "enabled": true
    }
  }
}
